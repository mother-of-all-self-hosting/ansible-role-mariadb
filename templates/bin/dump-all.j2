#!/bin/bash

if [ $# -ne 1 ]; then
	echo "Usage: "$0" <directory_path>"
	echo "A latest-dump.sql.gz file will be dumped to the specified directory"
	exit 1
fi

directory_path=$1

if [ ! -d "$directory_path" ]; then
	echo "$directory_path does not exist."
	exit 1
fi

docker_flags=''
if [ -t 1 ]; then
	# Got tty
	docker_flags='-it'
fi

{{ devture_systemd_docker_base_host_command_docker }} run \
	$docker_flags \
	--rm \
	--user={{ mariadb_uid }}:{{ mariadb_gid }} \
	--cap-drop=ALL \
	--mount type=bind,src=$directory_path,dst=/work \
	--mount type=bind,src={{ mariadb_base_path }}/my.cnf,dst=/my.cnf,ro \
	--network={{ mariadb_container_network }} \
	--entrypoint=/bin/bash \
	{{ mariadb_container_image_to_use }} \
	-c \
	'set -o pipefail && mysqldump --defaults-file=/my.cnf -h {{ mariadb_identifier }} --all-databases | gzip -c > /out/latest-dump.sql.gz'
